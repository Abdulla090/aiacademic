# Environment Configuration Template
# Copy this file to .env.local and fill in your actual values

# Gemini AI API Configuration
VITE_GEMINI_API_KEY=your_gemini_api_key_here
VITE_GEMINI_API_URL=https://generativelanguage.googleapis.com/v1beta

# Perplexity AI API Configuration
VITE_PERPLEXITY_API_KEY=your_perplexity_api_key_here
VITE_PERPLEXITY_API_URL=https://api.perplexity.ai

# Application Configuration
VITE_APP_TITLE=AI Academic Hub - Kurdish Academic Platform
VITE_APP_DESCRIPTION=Comprehensive AI-powered academic tools for Kurdish students and researchers
VITE_APP_URL=https://your-domain.com
VITE_APP_VERSION=1.0.0

# Analytics & Monitoring
VITE_GA_TRACKING_ID=
VITE_HOTJAR_ID=
VITE_SENTRY_DSN=

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_PWA=true
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_DEBUG=false

# Internationalization (i18n) Debug
I18N_DEBUG=false

# API Rate Limiting
VITE_API_RATE_LIMIT=60
VITE_API_TIMEOUT=30000

# File Upload Limits
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=pdf,docx,txt,jpg,png,gif

# Cache Configuration
VITE_CACHE_DURATION=3600000
VITE_ENABLE_SERVICE_WORKER=true

# Social Media
VITE_SOCIAL_TWITTER=@youraccount
VITE_SOCIAL_FACEBOOK=yourpage
VITE_SOCIAL_LINKEDIN=yourcompany